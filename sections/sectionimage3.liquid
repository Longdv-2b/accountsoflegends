{% include 'style-custom-block-overview' %}
{% if section.settings.enable %}
<section style="background: {{section.settings.back_style_left}}" class="custom-block-overview section-{{section.id}} " id="{{section.settings.id_scroll}}">

 
  <div class="overview-bottom mrtp wd">
    {% for block in section.blocks %}
      <div class="custom-overview block-{{block.id}} {% if block.settings.alignment == 'right' %}custom-overview-rtl{% endif %}" >
        <div style="background: {{block.settings.back_style_left1}}" class="txtse3 ">

            <h1 class="coltitle" style=" font-size: {{block.settings.font_siz}};color: {{block.settings.title_styl}} ;">
              {{block.settings.title1 }}
          </h1>
 
        </div>
        <div class="div1">
          <div class="div2">
            <div class="con1">
              
             
            <h3 class="title" style=" font-size: {{block.settings.font_size_title_style}};color: {{block.settings.title_style_color}} ;">
              {{block.settings.title_style }}
            </h3>
              <div class="des" style="font-size: {{block.settings.font_size_des_style}}; color: {{block.settings.des_style_color}} ;">
                {{ block.settings.des_style }}
              </div>
            
              
           
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
    
  </div>
 
</section>



{% endif %}

<style>
  
   @media (min-width: 992px){
  .min {
    display: block;
    margin-top: 69px;
}
.overview-bottom.mrtp.wd {
    max-width: 1200px;
    margin: auto;
    padding-top: 64px;
}
     .div1 {
    width: 50%;
    padding: 20px 20px;
   
}
     .txtse3 {
    width: 50%;
    padding: 118px 61px;
}
     .div2 {
    padding: 27px 33px;
}
   }
  
   @media (max-width: 767px){
  
   .overview-bottom.mrtp.wd {
    max-width: 1200px;
    margin: auto;
    padding-top: 30px;
}
     h1.coltitle {
    font-size: 29px !important;
    padding: 40px 38px;
}
     .con1 {
    padding: 10px 10px;
}
   }
</style>
