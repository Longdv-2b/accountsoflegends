  <div class="header-bottom" data-sticky-mb >
    <div class="container-fluid">
      <div class="wrapper-header-bt">
        {% include 'header-mobile' %}
        <div class="header-pc">
          <div class="left-header header-items">
            <h3 class="header-logo" itemscope itemtype="https://schema.org/Organization">
              <meta itemprop="url" content="{{ shop.url }}">
              {% if section.settings.brand_type == 'image'%}
              {% if section.settings.logo_pc != blank %}
              <a class="logo-img home-logo" href="/" title="Logo">
               <img data-src="{{ section.settings.logo_pc | img_url: 'master' }}" itemprop="logo" {% include 'lazyload' %}>
              </a>
              {% endif %}
              {% if section.settings.logo_pc_homepage %}
              <a class="logo-img " href="/" title="Logo">
                <img data-src="{{ section.settings.logo_pc_homepage | img_url: 'master' }}" itemprop="logo" {% include 'lazyload' %}>
              </a>
              {% endif %}
              {% elsif section.settings.brand_text != '' %}
              <a class="logo-title" href="/">
                {{ section.settings.brand_text }}
              </a>
              {% else %}
              <a class="logo-title" href="/">
                {{ shop.name }}
              </a>
              {% endif %}
            </h3>
          </div>
          <div class="wrapper-navigation">
            <div class="main-menu jas-mb-style">
              <div class="col-12">
                <nav class="nav-bar" role="navigation">
                    {% include 'site-nav' %}
                  </nav>

                {% comment %}
                 {% if template contains 'index' %}
                <div class="mb-area">
                  <nav class="nav-bar" role="navigation">
                    {% include 'site-nav' %}
                  </nav>
                </div>
                {% else %}
                <div class="Back-to-home">
                  <a class="icon-bth" href="/">{% include 'icon-back-to-home' %}</a>
                  <a class="" href="/">{% include 'multilang' with section.settings.goto_homepage %}</a>
                </div>
                {% endif %}
                 {% endcomment %}
              </div>
            </div>
          </div>
          <div class="right-header header-items" data-append-header-pc>
            <div class="grp-acc-cart">
            <div class="cart-icon svg-mb" >
              <a href="/cart" title="Cart Icon">
                {% include 'icon-cart' %}

                <span class="cartCount" data-cart-count>
                  {{ cart.item_count }}
                </span>
              </a>
            </div>
            {% if shop.customer_accounts_enabled %}
              {% if customer %}
                <div class="cart-icon svg-mb" style="padding-left: 15px">
                  <a href="/pages/lootbox" title="Lootbox">
                    {% include 'icon-box' %}
                    <span class="cartCount" id="countCreditBrand" data-cart-count>
                      0
                    </span>
                  </a>
                </div>
              {% endif %}
            <div class="acc-mb svg-mb" style="padding-left: 15px">
              <a href="/account" title="User Icon" class="icon-user" >
                {% include 'icon-user' %}
              </a>
            </div>
            {% endif %}
            </div>

            <div class="header-buy-now">
              <button class="btn btn-x1" onclick="window.location.href='{{ settings.buy_now_header }}'" >{% include 'multilang' with section.settings.text_buy_now %}</button>
            </div>
          </div>



        </div>

      </div>
    </div>
  </div>
</header>

