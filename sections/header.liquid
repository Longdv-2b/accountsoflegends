<script>
  const customerId = {{ customer.id | json }};
  if (customerId) {
    $.ajax(`/a/hura/customers/${customerId}/credits`, {
        method: 'GET',
        contentType: 'application/json',
        dataType: 'json',
        success: function (data) {
          document.getElementById('countCreditBrand').innerText = data.credits || 0
          if (document.getElementById('2b-total-credits')) {
            document.getElementById('2b-total-credits').innerText = data.credits || 0
          }
        }
    })
  }
</script>
