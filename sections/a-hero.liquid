{% if section.settings.enable %}
<section class="banner-parallax New-layout section-{{section.id}}">
  {%- assign image_url = section.settings.back_image | img_url: '2000x'-%}
  {% if  section.settings.back_image !=blank %}
  <div class="banner-image lazyload " data-bgset="{{image_url}}" style="background-image:url({{image_url}});min-height:{{section.settings.min_height}};{% if section.settings.fixed_enable %}background-attachment: fixed;{% endif %}">
    
  </div>
  {%else%}
  <div class="no-image" style="padding-top:55%;font-size:30px"><span>2000 x 980px</span></div>
  {% endif %}
  <div class="container">
    <div class=" banner-content">
      <div class="container-2" style="min-height:{{section.settings.min_height}}">
        <div class="banner_left">
          {% if section.settings.image_right != blank %}
          {%- assign img_pos = section.settings.image_right | img_url: '800x'-%}
           <img style="width: {{section.settings.img_width}}%;" data-src="{{img_pos}}" alt="{{img_pos.alt}}" {% include 'lazyload' %}>
          {% endif%}
          <div class="des">
            <p class="banner-sub-text" style="font-size:{{section.settings.font_size_sub}}; color:{{section.settings.color_sub}}">
              {% include 'multilang' with section.settings.sub_heading %}
            </p>
            <h2 class="banner-heading" style="font-size:{{section.settings.font_size_heading}}; color:{{section.settings.color_heading}}">
              {% include 'multilang' with section.settings.heading %}
            </h2>
            <div class="parallax-btns btns_2">
              {% if  section.settings.text_submit !=blank %}
              <a href ="{{section.settings.link_button}}" class="btn btn-x2 victoria-one animated-button lol-button1" style="background-color:{{section.settings.back_btn_color}}; color:{{section.settings.btn_color}}; border-color:{{section.settings.btn_color}}"><div class="open-box-inside"><span>{% include 'multilang' with section.settings.text_submit%}</span></div></a>
              {% endif %}
              {% if  section.settings.text_submit2 !=blank %}
              <a href ="{{section.settings.link_button2}}" class="btn btn-x2 victoria-one animated-button lol-button1" style="background-color:{{section.settings.back_btn_color2}}; color:{{section.settings.btn_color2}}; border-color:{{section.settings.btn_color2}}"><div class="open-box-inside"><span>{% include 'multilang' with section.settings.text_submit2%}</span></div></a>
              {% endif %}
            </div>
            <div class="parallax-btns btns_1">  
              {% if  section.settings.text_submit3 !=blank %}
              <a href ="{{section.settings.link_button3}}" class="btn btn-x2 victoria-one animated-button lol-button1" style="background-color:{{section.settings.back_btn_color3}}; color:{{section.settings.btn_color3}}; border-color:{{section.settings.btn_color3}}"><div class="open-box-inside"><span>{% include 'multilang' with section.settings.text_submit3%}</span></div></a>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
    
</section>
{% endif %}
