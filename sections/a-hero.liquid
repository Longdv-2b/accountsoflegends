<style>
  .section-{{section.id}} .banner-image{
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    
  }
 
  {% if section.settings.animation_image %}
  .banner-parallax  .banner_right  img{
    animation-name: anumation_image;
    animation-duration: 2s;
    animation-timing-function: ease-in;
    animation-delay: 1s;
    animation-iteration-count: infinite;
    animation-direction: alternate-reverse;
    position: relative

  }
  @keyframes  anumation_image{
    from {
      top: -15px;
      width: 100%;
    }
    to {
      top: 20px;
      width: 100%;
    }
  }
  {% endif %}
  
  @media (min-width: 1025px)
  {
    .header .header-bottom {
      background-color: transparent;
      position: absolute;
      width: 100%;
      margin:0 auto;
      z-index:99;
    }
  
  }
  
  @media (max-width:767px) {
    .banner-parallax .container-2 .banner_left {
      width: 100%;
    }
    .parallax-btns {
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .banner-parallax .banner-content .banner_left .parallax-btns .btn-x2 {
      min-width: 160px;
      padding: 10px;
      margin: 5px;
      font-size: 15px;
    }
  }

  
</style>
